#ifndef GRAPHICS_H
#define GRAPHICS_H

#include <iostream>
using namespace std;

#include "graphics_headers.h"
#include "camera.h"
#include "shader.h"
#include "object.h"

class Graphics
{
  public:
    Graphics();
    ~Graphics();
    bool Initialize(int width, int height);
    void Update(unsigned int dt);
    void Render();
    void Reverse(int x);
    void RecursiveReverse(int y,Object * obj);
    int index;
    void Graphics::UpdateIndex();

  private:
    std::string ErrorString(GLenum error);

    Camera *m_camera;
    Shader *m_shader;

    GLint m_projectionMatrix;
    GLint m_viewMatrix;
    GLint m_modelMatrix;

    Object *m_cube;
    void RecursiveRender(Object* obj);
    void RecursiveUpdate(Object* obj, unsigned int dt);
};

#endif /* GRAPHICS_H */
